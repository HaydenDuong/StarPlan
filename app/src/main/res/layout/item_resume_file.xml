<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_resume_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_pdf_file_gray"
        app:tint="@android:color/darker_gray"
        android:layout_marginEnd="16dp"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="MyResume_Final.pdf"
            android:textColor="@android:color/black"
            android:textStyle="normal"/> <!-- Default to normal, adapter can change to bold if selected -->

        <TextView
            android:id="@+id/tv_file_last_edited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Last edited on 2 days ago"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:visibility="gone"/> <!-- Initially hidden, can be shown if data is available -->
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selection_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_drop_down_gray"
        app:tint="@color/brand_blue"
        android:visibility="gone"
        tools:ignore="ContentDescription" /> <!-- Initially hidden, shown for selected item -->

</LinearLayout>