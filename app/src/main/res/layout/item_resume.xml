<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Resume Thumbnail -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="72dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/resumeThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_description"
                android:padding="12dp"
                android:tint="@color/brand_blue" />
        </androidx.cardview.widget.CardView>

        <!-- Resume Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resumeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume_2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/resumeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last edited on 2 days ago"
                android:textSize="12sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/resumeIndustry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Engineering"
                android:textSize="12sp"
                android:textColor="@color/brand_blue"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_industry_tag"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
